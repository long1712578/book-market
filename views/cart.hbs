  <!--================Cart Area =================-->
{{#with cart}}
  <section class="cart_area">
      <div class="container">
          <div class="cart_inner" id="cart-body">
              {{#if items.length}}
              <div class="table-responsive">
                  <table class="table">
                      <thead>
                          <tr>
                              <th scope="col">Sản phẩm</th>
                              <th scope="col">Giá</th>
                              <th scope="col">Số lượng</th>
                              <th scope="col">Tổng</th>
                          </tr>
                      </thead>
                      <tbody>
                        {{#each items}}
                        {{!-- <li class="cart-item"> --}}
                          <tr  {{#each item}} id="item{{ma_so}}" {{/each}}>
                              <td>
                                  {{#each item}}
                                  <div class="media">
                                      <div class="d-flex">
                                          <img src={{hinh_anh}} alt="" style="height: 80px;">
                                      </div>
                                      <div class="media-body">
                                          <p>{{ten_san_pham}}</p>
                                      </div>
                                  </div>
                                  {{/each}}
                              </td>
                              <td>
                                  {{#each item}}
                                  <h5>{{gia_tien}} Đ</h5>
                                  {{/each}}
                              </td>
                              <td>
                                  
                                  <div class="product_count">
                                      <input class="" type="text" name="qty" {{#each item}} id="sst{{ma_so}}"{{/each}} maxlength="12" value="{{quantity}}" title="Quantity"
                                          style="width: 50px;" readonly />
                                    {{#each item}}
                                      <button onclick="var result = document.getElementById('sst{{ma_so}}'); var sst = result.value; if( !isNaN( sst )) result.value++; 
                                       updateCart({{ma_so}},result.value); return false;"
                                          class="increase items-count" type="button"><i class="fas fa-angle-up"></i></button>
                                      <button onclick="var result = document.getElementById('sst{{ma_so}}'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 1|| (sst == 1) &amp;&amp; confirm('Bạn muốn xóa sản phẩm này khỏi cart không?')) result.value--;  updateCart({{ma_so}},result.value); return false;"
                                          class="reduced items-count" type="button"><i class="fas fa-angle-down"></i></button>
                                    {{/each}}
                                  </div>
                                  
                              </td>
                              <td>
                                  {{#each item}}
                                  <h5 id="price{{ma_so}}">{{gia_tien}} Đ</h5>
                                  {{/each}}
                              </td>
                          </tr>
                        {{!-- </li> --}}
                        {{/each}}
                          <tr class="bottom_button">
                              <td>
                                 
                                  <button id="checkout" data-id="{{ma_so}}" onclick="confirmCart()" 
                style="background-color: #58257b;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;" >Thanh toán</button>
                              </td>
                              <td>

                              </td>
                              <td>

                              </td>
                              <td>
                                  
                              </td>
                          </tr>
                          <tr>
                              <td>

                              </td>
                              <td>

                              </td>
                              <td>
                                  <h4>THÀNH TIỀN</h4>
                              </td>
                              <td>
                                  <h5 id="totalPrice">{{totalPrice}} Đ</h5>
                              </td>
                          </tr>
                      </tbody>
                  </table>
                  {{else}}
                    <div class="alert alert-info text-center">My cart is empty</div>
                  {{/if}}
              </div>
          </div>
      </div>
  </section>
  {{/with}}